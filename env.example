# YOY Wallet App Environment Variables
# Copy this file to .env and fill in your actual values

# Infura Configuration
REACT_APP_INFURA_ID=your_infura_project_id_here
REACT_APP_INFURA_URL=https://mainnet.infura.io/v3/your_infura_project_id_here
REACT_APP_INFURA_URL_SEPOLIA=https://sepolia.infura.io/v3/your_infura_project_id_here

# API Keys (Optional - for future use)
REACT_APP_COINGECKO_API_KEY=your_coingecko_api_key_here
REACT_APP_UPBIT_API_KEY=your_upbit_api_key_here

# App Configuration
REACT_APP_APP_NAME=YOY Wallet
REACT_APP_APP_VERSION=1.0.0
REACT_APP_DEFAULT_LANGUAGE=en

# Admin Configuration
REACT_APP_ADMIN_EMAILS=admin@yooyland.com,landyooy@gmail.com,jch4389@gmail.com

# Blockchain Configuration
REACT_APP_YOY_CONTRACT_ADDRESS=0xf999DA2B5132eA62A158dA8A82f2265A1b1d9701
REACT_APP_CHAIN_ID=1
REACT_APP_NETWORK_NAME=Ethereum Mainnet

# Development Configuration
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Security Configuration
REACT_APP_SESSION_TIMEOUT=30
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_PASSWORD_MIN_LENGTH=8

# Feature Flags
REACT_APP_ENABLE_BIOMETRIC=true
REACT_APP_ENABLE_PIN_AUTH=true
REACT_APP_ENABLE_PATTERN_AUTH=false
REACT_APP_ENABLE_ADMIN_PANEL=true
REACT_APP_ENABLE_WALLET_CREATION=true
REACT_APP_ENABLE_COIN_MANAGEMENT=true
